<div>
	<div class="table-responsive">
		<table class="table table-condensed">
			<thead>
				<tr>
					<th>ID</th>
					<th>Title</th>
					<th>Assigned User</th>
					<th>Creation Date</th>
					<th>Start Date</th>
					<th>Completion Date</th>
					<th>Elapsed Time</th>
					<th>Evidence Notes</th>
				</tr>
			</thead>
			<tbody>
				{{#each jobs}}
					<tr>
						<td>{{this.id}}</td>
						<td>{{this.title}}</td>
						<td>{{this.assignedUser}}</td>
						<td>{{this.creationDate}}</td>
						<td>{{this.startDate}}</td>
						<td>{{this.completionDate}}</td>
						<td>{{this.elapsedTime}} seconds</td>
						<td>
                            {{#each notes}}
								<p>ID:{{this.id}} {{this.note.title}}: {{this.note.text}}</p>
										{{#each note.files}}
											<a href="https://boozallen.taqmanifest.com/{{this.url}}">{{this.url}}</a>
										{{/each}}
							{{/each}}
                        </td>

					</tr>
				{{/each}}
			</tbody>
			<tfooter>
				<tr><td>

				</td></tr>
			</tfooter>
		</table>
	</div>
</div>


